{
  // Editor
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  // Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.wordWrap": "off",

    "files.trimTrailingWhitespace": false
  },

  // Json
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Typescript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Solidity
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity",
    "editor.tabSize": 4
  },

  // Diff editor
  "diffEditor.ignoreTrimWhitespace": false,

  // Spell checker
  "cSpell.enableFiletypes": ["javascript", "typescript", "solidity", "json", "markdown"],
  "cSpell.includeRegExpList": ["CStyleComment"],
  "cSpell.userWords": ["delegatecall", "keccak", "proxied", "reentrancy", "solhint", "struct"],
  "cSpell.words": ["postfund", "prefund", "premint", "preminted", "preminting", "Structs"],

  // Todo highlight
  "todohighlight.isCaseSensitive": false,
  "todohighlight.keywords": [
    {
      "text": "NOTE:",
      "color": "#ff0000",
      "backgroundColor": "yellow",
      "overviewRulerColor": "grey"
    },
    {
      "text": "REVIEW:",
      "color": "#00bbff",
      "backgroundColor": "yellow",
      "overviewRulerColor": "grey"
    },
    {
      "text": "HACK:",
      "color": "red",
      "border": "1px solid red",
      "borderRadius": "2px", //NOTE: using borderRadius along with `border` or you will see nothing change
      "backgroundColor": "rgba(0,0,0,.2)",
      "isWholeLine": false
    }
  ],

  // markdownlint
  "markdownlint.config": {
    "no-duplicate-heading": false,
    "no-multiple-blanks": false
  }
}
